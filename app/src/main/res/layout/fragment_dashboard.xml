<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/dimen10dp"
        card_view:cardElevation="@dimen/dimen1dp"
        card_view:cardUseCompatPadding="true"
        card_view:elevation="@dimen/dimen1dp">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgProductImage3"
                android:layout_width="@dimen/dimen150dp"
                android:layout_height="@dimen/dimen150dp"
                android:layout_gravity="left"
                android:contentDescription="@string/product_image"
                android:src="@drawable/dummy_data"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="185dp"
                android:layout_height="157dp"
                android:layout_marginEnd="36dp"
                android:orientation="vertical"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.58"
                card_view:layout_constraintStart_toEndOf="@+id/imgProductImage3"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/txtProductName3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Samsung galaxy A70"
                    android:textColor="@color/title"
                    android:textSize="@dimen/dimen18sp"
                    card_view:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="176dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Samsung"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/dimen20sp"
                    card_view:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="176dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="170.00 JD"
                    android:textColor="@color/blueDark"
                    android:textSize="@dimen/dimen18sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="176dp"
                    tools:layout_editor_absoluteY="67dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen35dp"
                    android:layout_marginTop="@dimen/dimen20dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/background_lightGray"
                    android:gravity="center"
                    android:orientation="horizontal"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    tools:layout_editor_absoluteY="105dp">

                    <ImageView
                        android:layout_width="@dimen/dimen30dp"
                        android:layout_height="@dimen/dimen30dp"
                        android:layout_marginEnd="@dimen/dimen20dp"
                        android:background="@drawable/touch_feedback"
                        android:contentDescription="@string/share_product"
                        android:src="@drawable/ic_baseline_add_24" />

                    <TextView
                        android:layout_width="@dimen/dimen30dp"
                        android:layout_height="@dimen/dimen30dp"
                        android:layout_marginEnd="@dimen/dimen20dp"
                        android:contentDescription="@string/add_to_cart"
                        android:gravity="center"
                        android:src="@drawable/ic_add_shopping_cart"
                        android:text="1"
                        android:textSize="@dimen/dimen20sp" />

                    <ImageView
                        android:layout_width="@dimen/dimen30dp"
                        android:layout_height="@dimen/dimen30dp"
                        android:contentDescription="@string/add_to_favourite"
                        android:src="@drawable/ic_minus"
                        android:text="-" />
                </LinearLayout>


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/dimen10dp"
        card_view:cardElevation="@dimen/dimen1dp"
        card_view:cardUseCompatPadding="true"
        card_view:elevation="@dimen/dimen1dp">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgProductImage"
                android:layout_width="@dimen/dimen150dp"
                android:layout_height="@dimen/dimen150dp"
                android:layout_gravity="left"
                android:contentDescription="@string/product_image"
                android:src="@drawable/dummy_databookshelf"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="185dp"
                android:layout_height="157dp"
                android:layout_marginEnd="36dp"
                android:orientation="vertical"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="1.0"
                card_view:layout_constraintStart_toEndOf="@+id/imgProductImage"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/txtProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Bookshelf Ikea"
                    android:textColor="@color/title"
                    android:textSize="@dimen/dimen18sp"
                    card_view:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="176dp" />

                <TextView
                    android:id="@+id/dd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="IKEA"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/dimen20sp"
                    card_view:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="176dp" />

                <TextView
                    android:id="@+id/txtProductPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="55.00 JD"
                    android:textColor="@color/blueDark"
                    android:textSize="@dimen/dimen18sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="176dp"
                    tools:layout_editor_absoluteY="67dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen35dp"
                    android:layout_marginTop="@dimen/dimen20dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/background_lightGray"
                    android:gravity="center"
                    android:orientation="horizontal"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    tools:layout_editor_absoluteY="105dp">

                    <ImageView
                        android:id="@+id/imgShare"
                        android:layout_width="@dimen/dimen30dp"
                        android:layout_height="@dimen/dimen30dp"
                        android:layout_marginEnd="@dimen/dimen20dp"
                        android:background="@drawable/touch_feedback"
                        android:contentDescription="@string/share_product"
                        android:src="@drawable/ic_baseline_add_24" />

                    <TextView
                        android:id="@+id/imgCart"
                        android:layout_width="@dimen/dimen30dp"
                        android:layout_height="@dimen/dimen30dp"
                        android:layout_marginEnd="@dimen/dimen20dp"
                        android:contentDescription="@string/add_to_cart"
                        android:gravity="center"
                        android:src="@drawable/ic_add_shopping_cart"
                        android:text="1"
                        android:textSize="@dimen/dimen20sp" />

                    <ImageView
                        android:id="@+id/imgFavourite"
                        android:layout_width="@dimen/dimen30dp"
                        android:layout_height="@dimen/dimen30dp"
                        android:contentDescription="@string/add_to_favourite"
                        android:src="@drawable/ic_minus"
                        android:text="-" />
                </LinearLayout>


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/dimen10dp"
        card_view:cardElevation="@dimen/dimen1dp"
        card_view:cardUseCompatPadding="true"
        card_view:elevation="@dimen/dimen1dp">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgProductImage2"
                android:layout_width="@dimen/dimen150dp"
                android:layout_height="@dimen/dimen150dp"
                android:layout_gravity="left"
                android:contentDescription="@string/product_image"
                android:src="@drawable/samsung_galaxy_a70"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="185dp"
                android:layout_height="157dp"
                android:layout_marginEnd="36dp"
                android:orientation="vertical"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.58"
                card_view:layout_constraintStart_toEndOf="@+id/imgProductImage2"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/txtProductName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Samsung galaxy A70"
                    android:textColor="@color/title"
                    android:textSize="@dimen/dimen18sp"
                    card_view:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="176dp" />

                <TextView
                    android:id="@+id/dd2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Samsung"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/dimen20sp"
                    card_view:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="176dp" />

                <TextView
                    android:id="@+id/txtProductPrice2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150.00 JD"
                    android:textColor="@color/blueDark"
                    android:textSize="@dimen/dimen18sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="176dp"
                    tools:layout_editor_absoluteY="67dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen35dp"
                    android:layout_marginTop="@dimen/dimen20dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/background_lightGray"
                    android:gravity="center"
                    android:orientation="horizontal"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    tools:layout_editor_absoluteY="105dp">

                    <ImageView
                        android:id="@+id/imgShare2"
                        android:layout_width="@dimen/dimen30dp"
                        android:layout_height="@dimen/dimen30dp"
                        android:layout_marginEnd="@dimen/dimen20dp"
                        android:background="@drawable/touch_feedback"
                        android:contentDescription="@string/share_product"
                        android:src="@drawable/ic_baseline_add_24" />

                    <TextView
                        android:id="@+id/imgCart2"
                        android:layout_width="@dimen/dimen30dp"
                        android:layout_height="@dimen/dimen30dp"
                        android:layout_marginEnd="@dimen/dimen20dp"
                        android:contentDescription="@string/add_to_cart"
                        android:gravity="center"
                        android:src="@drawable/ic_add_shopping_cart"
                        android:text="1"
                        android:textSize="@dimen/dimen20sp" />

                    <ImageView
                        android:id="@+id/imgFavourite2"
                        android:layout_width="@dimen/dimen30dp"
                        android:layout_height="@dimen/dimen30dp"
                        android:contentDescription="@string/add_to_favourite"
                        android:src="@drawable/ic_minus"
                        android:text="-" />
                </LinearLayout>


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
</layout>
