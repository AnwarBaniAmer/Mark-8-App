<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="@dimen/dimen10dp"
            card_view:cardElevation="@dimen/dimen1dp"
            card_view:cardUseCompatPadding="true"
            card_view:elevation="@dimen/dimen1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen5dp"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:drawableLeft="@drawable/ic_notifications_black_24dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="IKEA Family offer"
                    android:textColor="@color/title"
                    android:textSize="@dimen/dimen18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen5dp"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="25% off all Furniture Offer valid 1/1/21 â€“ 1/31/21"
                    android:textColor="@color/title"
                    android:textSize="@dimen/dimen18sp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="@dimen/dimen10dp"
            card_view:cardElevation="@dimen/dimen1dp"
            card_view:cardUseCompatPadding="true"
            card_view:elevation="@dimen/dimen1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen5dp"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:drawableLeft="@drawable/ic_notifications_black_24dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="SIDA 2021 offers are here!"
                    android:textColor="@color/title"
                    android:textSize="@dimen/dimen18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen5dp"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="50% off all our products, check our page now"
                    android:textColor="@color/title"
                    android:textSize="@dimen/dimen18sp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="@dimen/dimen10dp"
            card_view:cardElevation="@dimen/dimen1dp"
            card_view:cardUseCompatPadding="true"
            card_view:elevation="@dimen/dimen1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen5dp"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:drawableLeft="@drawable/ic_notifications_black_24dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Opal"
                    android:textColor="@color/title"
                    android:textSize="@dimen/dimen18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen5dp"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="A new collection is available in our stores"
                    android:textColor="@color/title"
                    android:textSize="@dimen/dimen18sp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>
